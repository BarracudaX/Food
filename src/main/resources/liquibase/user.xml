<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro
        http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">

    <changeSet id="1" author="Kalaitsidis Arslan">
        <createTable tableName="users">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" />
            </column>
            <column name="name" type="VARCHAR(244)">
                <constraints nullable="false" />
            </column>

            <column name="email" type="VARCHAR(244)">
                <constraints nullable="false" />
            </column>

            <column name="password" type="VARCHAR(244)">
                <constraints nullable="false" />
            </column>

            <column name="role" type="VARCHAR(244)">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="Kalaitsidis Arslan">
        <createTable tableName="user_sequence">
            <column name="next_val" type="BIGINT" defaultValue="0" />
        </createTable>
    </changeSet>

    <changeSet id="3" author="Kalaitsidis Arslan">
        <insert tableName="user_sequence">
            <column name="next_val">1</column>
        </insert>
    </changeSet>

    <changeSet id="4" author="Kalaitsidis Arslan" context="dev">
        <insert tableName="users">
            <column name="id">1</column>
            <column name="password">$2a$10$6smN1fda0NAu4zvb6JuWteQq4NyOYY.O/XFDn2EHofH9RQ423.7ju</column>
            <column name="name">Test User</column>
            <column name="email">test@email.com</column>
            <column name="role">USER</column>
        </insert>
        <update tableName="user_sequence">
            <column name="next_val">2</column>
        </update>
    </changeSet>

</databaseChangeLog>